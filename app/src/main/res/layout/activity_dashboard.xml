<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name"
    tools:context=".view.Dashboard">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/outfit_mediumm"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textColor="#63000000"
            android:text="Hola"
            android:textSize="20dp"
            android:layout_gravity="left"/>


        <TextView
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/outfit_mediumm"
            android:gravity="left"
            android:text="Tu balance"
            android:textColor="#63000000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/viewIngresos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/work_sans_semibold"
            android:gravity="left"
            android:text="$ 99.9999"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/outfit_mediumm"
            android:gravity="left"
            android:text="Extra"
            android:textColor="#63000000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/viewInExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/work_sans_semibold"
            android:gravity="left"
            android:text="$ 0.00"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/outfit_mediumm"
                android:gravity="left"
                android:text="Registra tus operaciones diarias"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_mediumm"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Administra tu dinero"
                android:textColor="#75000000"
                android:textSize="16dp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/btnOP"
                    android:layout_width="149dp"
                    android:layout_height="149dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-5dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#FFF9F2"
                    android:textColor="#000"
                    android:textSize="18dp"

                    android:gravity="bottom|left"
                    android:padding="30dp"
                    android:text="Ahorros"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnGF"
                    android:layout_width="149dp"
                    android:layout_height="149dp"
                    android:layout_marginStart="-5dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="150dp"
                    android:backgroundTint="#F6F5FE"
                    android:gravity="center|left"
                    android:padding="30dp"
                    android:textColor="#000"
                    android:text="Ingresar \nGastos"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnIE"
                    android:layout_width="149dp"
                    android:layout_height="149dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="180dp"
                    android:layout_marginBottom="7dp"
                    android:backgroundTint="#F3F4F6"

                    android:gravity="bottom|left"
                    android:padding="30dp"
                    android:text="Ingreso \nExtra"
                    android:textColor="#000"
                    android:textSize="18dp"
                    app:cornerRadius="20dp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnVG"
                    android:layout_width="149dp"
                    android:layout_height="149dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="150dp"
                    android:backgroundTint="#DAEADA"
                    android:textColor="#000"
                    android:gravity="bottom|left"
                    android:padding="30dp"
                    android:text="Ver Gastos"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp" />
            </RelativeLayout>

        </LinearLayout>


