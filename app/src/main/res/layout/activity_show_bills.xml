        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="200dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#fff"
            android:padding="29dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/App"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_mediumm"
                    android:gravity="left"
                    android:text="Moneybox"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/viewBB"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/montserrat_mediumm"
                        android:gravity="left"
                        android:text="Tu balance"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/viewBalance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        android:fontFamily="@font/work_sans_semibold"
                        android:gravity="right"
                        android:text="$ 1.200.000"
                        android:textColor="#000"
                        android:textSize="23dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:layout_marginTop="60dp"
                        android:fontFamily="@font/montserrat_mediumm"
                        android:gravity="left"
                        android:text="0123 4567 8910 1112"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="60dp"
                        android:src="@drawable/card_symbol" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFFFF"
            android:padding="29dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_income"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/viewBc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat_mediumm"
                android:gravity="left"
                android:text="Tu balance"
                android:textColor="#5E000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/viewB"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/montserrat_mediumm"
                    android:gravity="left"
                    android:text="Ingreso"
                    android:textColor="#E4000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewCash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:gravity="right"
                    android:text="+4.000 $"
                    android:textColor="#EF000000"
                    android:textSize="19dp" />
                <!--                </LinearLayout>-->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="365dp"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F0FFFFFF"
            android:padding="29dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_bill"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/viewBg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/montserrat_mediumm"
                android:gravity="left"
                android:text="Gastado"
                android:textColor="#5E000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewBb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/montserrat_mediumm"
                    android:gravity="left"
                    android:text="Gasto"
                    android:textColor="#E4000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewBill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/work_sans_semibold"
                    android:gravity="right"
                    android:text="-5.000 $"
                    android:textColor="#F0000000"
                    android:textSize="19dp" />
                <!--                </LinearLayout>-->

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="30dp"-->
        <!--            android:fontFamily="@font/montserrat_mediumm"-->
        <!--            android:gravity="center"-->
        <!--            android:text="Tus gastos"-->
        <!--            android:textColor="#000"-->
        <!--            android:textSize="20dp" />-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Gastos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>