        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="Nombre"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/edit"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutPhone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:hint="Telefono"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/phone"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPhoneSG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtLayoutEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:hint="Email"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/mail"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmailSG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>


           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp">

               <Button
                   android:id="@+id/btnBuscar"
                   android:layout_width="151dp"
                   android:layout_height="62dp"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentBottom="true"
                   android:layout_marginStart="10dp"
                   android:layout_marginBottom="0dp"
                   android:layout_marginLeft="95dp"
                   android:layout_marginTop="20dp"
                   android:backgroundTint="#000"
                   android:fontFamily="@font/montserrat_semiboldd"
                   android:gravity="center"
                   android:text="Buscar"
                   android:textAllCaps="false"
                   android:textSize="17dp" />

               <Button
                   android:id="@+id/btnModificar"
                   android:layout_width="151dp"
                   android:layout_height="62dp"
                   android:layout_alignParentEnd="true"
                   android:layout_marginStart="10dp"
                   android:layout_marginBottom="0dp"
                   android:layout_marginLeft="95dp"
                   android:layout_marginTop="20dp"
                   android:backgroundTint="#000"
                   android:fontFamily="@font/montserrat_semiboldd"
                   android:gravity="center"
                   android:text="Modificar"
                   android:textAllCaps="false"
                   android:textSize="17dp" />


           </RelativeLayout>
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="151dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#000"
                android:fontFamily="@font/montserrat_semiboldd"
                android:gravity="center"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>